<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
android:elevation="10dp"


    android:layout_margin="10dp"
         android:background="@drawable/button"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:padding="30dp"
    tools:context=".ListView">


  <ImageView
      android:id="@+id/type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:text="type" />

  <LinearLayout
      android:layout_width="200dp"
android:layout_weight="1"
      android:layout_margin="0dp"
      android:layout_height="wrap_content"


      android:orientation="vertical">

    <TextView
        android:id="@+id/listviewnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:textColor="#151515"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/all"
        android:overScrollMode="ifContentScrolls"
        android:text="textview" />

    <TextView
        android:id="@+id/listviewnumberid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/all"
        android:text="textview"

        android:textColor="#807A7A" />

  </LinearLayout>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
android:layout_weight="1"
      android:layoutDirection="ltr"
      android:gravity="right"
      android:orientation="horizontal">


    <Button
        android:id="@+id/callbtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="60px"
        android:background="@drawable/baseline_call_24"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="1px"
        android:textColor="#05F30E" />

    <Button
        android:id="@+id/info"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginLeft="70px"
        android:background="@drawable/info_foreground"
        android:clickable="true"

        android:padding="1px" />


  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:fontFamily="@font/all"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time"
        android:fontFamily="@font/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  </LinearLayout>


</LinearLayout>