<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fontFamily="@font/all"
android:padding="10dp"
    android:layout_margin="2dp"
    android:layout_marginTop="200dp"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content"


    >




    <TextView
        android:layout_width="398dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="62dp"
        android:fontFamily="@font/all"
        android:text="Name"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/namepupop"
        android:layout_width="398dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="590dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/all"
        android:hint="name"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:fontFamily="@font/all"

        android:layout_marginTop="80dp"
        android:text="Title"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/tilepopup"
        android:layout_width="383dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="550dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="title"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:fontFamily="@font/all"

        android:layout_marginTop="140dp"
        android:text="Purpose"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/purposepupop"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/all"

        android:hint="purpose"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/all"

        android:text="Date"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/datepuppop"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/all"

        android:layout_marginRight="100dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="set Date"
        android:inputType="time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:fontFamily="@font/all"

        android:layout_marginTop="260dp"
        android:text="Time"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/timepupop"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="100dp"

        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/all"
        android:hint="time" />

    <Button
        android:id="@+id/yes"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="4dp"
        android:text="Yes" />

    <Button
        android:id="@+id/no"
        android:textColor="@color/white"
        android:background="@drawable/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/yes"
        android:text="No" />


</RelativeLayout>